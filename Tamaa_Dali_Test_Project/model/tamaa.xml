bool isBusy(int taskID)
{
    int id = 0;
    bool busy = false;

    for(id = 0; id &lt; AgentNum; id++)
    {
        if(ts[id][taskID])
        {
            busy = true;
            return busy;
        }
    }

    return busy;
}

